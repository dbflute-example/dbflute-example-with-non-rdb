${manager.allClassCopyright}package ${request.package}.bsentity.meta;

import org.dbflute.solr.entity.dbmeta.SolrDBMeta;

/**
 * Meta class of Solr schema "${tableMap.schema}."
 * @author FreeGen
 */
public enum Solr${tableMap.schema}Dbm implements SolrDBMeta {

    // ===================================================================================
    //                                                                       SolrFieldName
    //                                                                       =============
#foreach ($column in $request.columnList)
    /** ${column.name} */
    ${column.capCamelName}("${column.uncapCamelName}", "${column.name}"),
#end;

    private final String _propertyName;
    private final String _fieldName;
    private Solr${tableMap.schema}Dbm(String propertyName, String fieldName) {
        _propertyName = propertyName;
        _fieldName = fieldName;
    }

    @Override
    public String propertyName() {
        return _propertyName;
    }

    @Override
    public String fieldName() {
        return _fieldName;
    }
}
