<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE components PUBLIC "-//DBFLUTE//DTD LastaDi 1.0//EN" 
	"http://dbflute.org/meta/lastadi10.dtd">
<components namespace="esclient">
	<component name="client" instance="singleton">
		org.elasticsearch.client.transport.TransportClient
		.builder()
		.settings(org.elasticsearch.common.settings.Settings.settingsBuilder().put("cluster.name", "es-waterfront-test").build())
		.build()
		.addTransportAddress(new org.elasticsearch.common.transport.InetSocketTransportAddress(java.net.InetAddress.getByName("localhost"), 9301))
		<preDestroy name="close" />
	</component>
</components>
